{
  "compilerOptions": {
    "target": "ES6", // Set to ECMAScript 6 or newer
    "module": "ESNext", // Use ESNext for module support
    "jsx": "react", // Enable JSX for React
    "lib": ["dom", "esnext"], // Include the DOM and ESNext libraries
    "moduleResolution": "node", // Resolve modules like node.js
    "esModuleInterop": true, // Interop with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking for libraries
    "strict": true, // Enable strict type checking
    "noEmit": false // Make sure emit is enabled (this is important)
  },
  "include": [
    "src/**/*" // Include all .ts and .tsx files in src/
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
